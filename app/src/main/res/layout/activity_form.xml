<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="225dp">

        <ImageView
            android:id="@+id/activity_form_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#00A8EC"
            android:src="@drawable/img_person"/>

        <Button
            android:id="@+id/activity_bt_camera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_camera"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/activity_form_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:singleLine="true"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/activity_form_organization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Organization"
        android:singleLine="true"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/activity_form_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telephone"
        android:inputType="number"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/activity_form_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:singleLine="true"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/activity_form_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:singleLine="true"
        android:textSize="15sp"/>

</LinearLayout>
